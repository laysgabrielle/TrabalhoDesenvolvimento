@model Floricultura.Application.ViewModels.FlorViewModel


@{
ViewData["Title"] = "Excluir Flor";
}


<h1>Excluir Flor</h1>


<h3>Você tem certeza que deseja excluir esta flor?</h3>


<div>
<h4>@Model.Nome</h4>
<hr />
<dl class="row">
<dt class="col-sm-2">Descrição</dt>
<dd class="col-sm-10">@Model.Descricao</dd>


<dt class="col-sm-2">Preço</dt>
<dd class="col-sm-10">@Model.Preco.ToString("C")</dd>


<dt class="col-sm-2">Estoque</dt>
<dd class="col-sm-10">@Model.Estoque</dd>
</dl>
</div>


<form asp-action="DeleteConfirmed" method="post">
<input type="hidden" asp-for="Id" />
<button type="submit" class="btn btn-danger">Excluir</button>
<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
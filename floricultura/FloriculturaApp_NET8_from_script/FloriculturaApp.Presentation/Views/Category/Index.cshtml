@model List<CategoryDto>
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ğŸ“‚ Gerenciar Categorias</h1>
        <a href="/Category/Create" class="btn btn-primary-custom btn-custom">
            â• Adicionar Nova Categoria
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>AÃ§Ãµes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <a href="/Category/Details/@category.Id" class="btn btn-sm btn-info">
                                    ğŸ‘ï¸ Detalhes
                                </a>
                                <a href="/Category/Edit/@category.Id" class="btn btn-sm btn-warning">
                                    âœï¸ Editar
                                </a>
                                <a href="/Category/Delete/@category.Id" class="btn btn-sm btn-danger">
                                    ğŸ—‘ï¸ Deletar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            Nenhuma categoria encontrada. <a href="/Category/Create">Crie uma agora!</a>
        </div>
    }
</div>

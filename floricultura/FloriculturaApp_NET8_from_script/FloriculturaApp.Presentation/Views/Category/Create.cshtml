@model CategoryDto
@{
    ViewData["Title"] = "Criar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4">‚ûï Adicionar Nova Categoria</h1>

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nome da Categoria *</label>
                    <input asp-for="Name" class="form-control" placeholder="Ex: Rosas">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary-custom btn-custom">üíæ Salvar</button>
                    <a href="/Category" class="btn btn-secondary btn-custom">‚ùå Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

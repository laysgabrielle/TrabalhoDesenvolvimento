@model List<ProductDto>
@{
    ViewData["Title"] = "Flores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üåπ Gerenciar Flores</h1>
        <a href="/Product/Create" class="btn btn-primary-custom btn-custom">
            ‚ûï Adicionar Nova Flor
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <div class="input-group">
                <input type="text" id="searchInput" class="form-control search-box" 
                    placeholder="Buscar flores..." autocomplete="off">
                <button class="btn btn-primary-custom" onclick="performSearch()">
                    üîç Buscar
                </button>
            </div>
        </div>
    </div>

    <div id="productList">
        @if (Model != null && Model.Count > 0)
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    <strong>Pre√ßo:</strong> R$ @product.Price.ToString("F2")
                                </p>
                                <p class="card-text">
                                    <strong>Categoria ID:</strong> @product.CategoryId
                                </p>
                                <div class="mt-3">
                                    <a href="/Product/Details/@product.Id" class="btn btn-sm btn-info">
                                        üëÅÔ∏è Ver Detalhes
                                    </a>
                                    <a href="/Product/Edit/@product.Id" class="btn btn-sm btn-warning">
                                        ‚úèÔ∏è Editar
                                    </a>
                                    <a href="/Product/Delete/@product.Id" class="btn btn-sm btn-danger">
                                        üóëÔ∏è Deletar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                Nenhuma flor encontrada. <a href="/Product/Create">Adicione uma agora!</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        let debounceTimer;

        function performSearch() {
            clearTimeout(debounceTimer);
            const query = document.getElementById('searchInput').value;

            if (query.length === 0) {
                location.reload();
                return;
            }

            debounceTimer = setTimeout(() => {
                $.ajax({
                    url: '/Product/Search',
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        $('#productList').html(data);
                    },
                    error: function () {
                        showError('Erro ao buscar flores. Tente novamente.');
                    }
                });
            }, 300);
        }

        document.getElementById('searchInput').addEventListener('keyup', function (e) {
            if (e.key === 'Enter') {
                performSearch();
            } else {
                performSearch();
            }
        });
    </script>
}
